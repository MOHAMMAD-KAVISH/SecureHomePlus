<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/bg_survey_gradient"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- âœ… Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarHelp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/teal_700"
        android:title="Help &amp; Support"
        android:titleTextColor="@android:color/white"
        android:padding="10dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- FAQ Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                android:backgroundTint="@android:color/white"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“‹ Frequently Asked Questions"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:fontFamily="@font/poppins_medium" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="â€¢ How to use the safety survey?\nâ†’ Go to 'Survey' tab and answer all safety-related questions.\n\nâ€¢ How to save my reports?\nâ†’ After completing, tap on 'Submit'. The report saves automatically in your account.\n\nâ€¢ How to contact emergency services?\nâ†’ Use the 'Emergency' section to call or alert authorities instantly."
                        android:textSize="14sp"
                        android:textColor="#555555"
                        android:fontFamily="@font/poppins_regular" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Buttons -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnContact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ“§ Contact Support"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/teal_700"
                app:cornerRadius="12dp"
                android:paddingVertical="10dp"
                android:fontFamily="@font/poppins_medium" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnFeedback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="â­ Give Feedback"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/teal_700"
                android:layout_marginTop="10dp"
                app:cornerRadius="12dp"
                android:paddingVertical="10dp"
                android:fontFamily="@font/poppins_medium" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
